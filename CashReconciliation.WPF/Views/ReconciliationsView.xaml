<UserControl x:Class="CashReconciliation.WPF.Views.ReconciliationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mvvm:ViewModelLocator.AutoWireViewModel="true"  
             xmlns:views="clr-namespace:CashReconciliation.WPF.Views"
             xmlns:mvvm="http://prismlibrary.com/">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Reconciliations}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>                                                
                    </ItemsPanelTemplate>                                            
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <views:CompactReconciliationView/>                                                
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>  
        </ScrollViewer>
    </Grid>
</UserControl>
